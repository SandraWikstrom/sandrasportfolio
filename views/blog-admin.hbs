<div class="container">
  <div class "columns">
    <div class="column col-12">
      <h4>Blog</h4>
    </div>
    <div class="column col-12">
      {{#if errorMessages.length}}
      <p>Couldn't submit because:</p>
      <ul>
        {{#each errorMessages}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      {{/if}}
      <div>
      <form action="/blog-admin" method="POST">
          <div>
            <label class="form-label" for="input-example-1">Write blogpost:</label>
            <input type="text" placeholder="Blogtitle" name="blogtitle" value="{{blogtitle}}" />
            <input type="text" placeholder="Blogpost" name="blogpost" value="{{blogpost}}"/>
          </div>
          <input class="btn btn-primary" type="submit" value="Send off to blog!" />
        </form>
      </div>
    </div>
    <div class="column col-8">
      {{#if blogs.length}}

        <ul class="list">
          {{#each blogs}}
            {{blogtitle}}
            <form action="/delete-blogtitle/{{id}}" method="POST">
              <button class="btn btn-secondary btn-sm">Delete</button>
              <button class="btn btn-secondary btn-sm">Edit</button>
	          </form>
            <div class="divider"></div>
          {{/each}}
        </ul>

      {{else}}

        <p>There are no blog posts right now.</p>

      {{/if}}
    </div>
  </div>