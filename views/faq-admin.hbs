<!-- https://picturepan2.github.io/spectre/layout/grid.html -->
<div class="container">
  <div class="columns">
    <div class="column col-12">
      <h4>Collected FAQs</h4>
      {{#if faqs.length}}

        <ul>
          {{#each faqs}}
            <li>{{question}}</li>
          {{/each}}
        </ul>

      {{else}}

        <p>There are no questions right now. Ask the first one!</p>

      {{/if}}
    </div>
    <div class="column col-5">
      <!-- https://picturepan2.github.io/spectre/elements/forms.html#forms-input -->
      <div>
        <h4>Answer FAQ</h4>
        <form action="" method="POST"> 
          <div>
            <label class="form-label" for="input-example-1">Write the question and the answer here:</label>
            <input type="text" placeholder="Question" name="approvedQuestion" />
            <input type="text" placeholder="Answer" name="answer" />
          </div>
          <input class="btn btn-primary" type="submit" value="Create answer" />
        </form>
      </div>
    </div>
</div>