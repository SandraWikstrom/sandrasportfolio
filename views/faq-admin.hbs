<div class="container">
  <div class="columns">
  <div class="column col-12">
      <h4>Delete or Edit FAQs</h4>
      {{#if answers.length}}

        <dl>
          {{#each answers}}
            <dt>{{approvedQuestion}}</dt>
            <dd>{{answer}}</dd>
            <form action="/delete-answer/{{id}}" method="POST">
              <button class="btn btn-secondary btn-sm">Delete</button>
	        </form>
          {{/each}}
        </dl>

      {{else}}

        <p>There are no questions right now. Ask the first one!</p>

      {{/if}}
    </div>
</div>