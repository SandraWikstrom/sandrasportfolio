<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/spectre.css/dist/spectre.min.css"
    />
    <link rel="stylesheet" href="/layout.css" />
    <title>Sandras Portfolio</title>
  </head>
  <body>

    <!-- NAVIGATION BAR -->
    <header class="navbar">
      <section class="navbar-section">
        <a href="/" class="navbar-brand mr-2">SANDRAS PORTFOLIO</a>
      </section>
      <section class="navbar-section">
        {{#if isLoggedIn}}
          <a href="/admin" class="btn btn-link">ADMIN-PAGES</a>
        {{/if}}
        <a href="/portfolio" class="btn btn-link">Portfolio</a>
        <a href="/blog" class="btn btn-link">Blog</a>
        <a href="/review" class="btn btn-link">Reviews</a>
        <a href="/faq" class="btn btn-link">FAQ</a>
        <a href="/about" class="btn btn-link">About/contact</a>
        {{#unless isLoggedIn}}
          <a href="/login" class="btn btn-link">Log in</a>
        {{/unless}}
        {{#if isLoggedIn}}
          <form action="/logout" method="POST">
            <div>
              <button class="btn btn-secondary">Log out</button>
            </div>
          </form>
        {{/if}}
      </section>
    </header>

    <!-- BODY -->
    {{{body}}}

  </body>
</html>